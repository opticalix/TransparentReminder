<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bar_transparent_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:color/transparent"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:paddingLeft="0dp"
        android:background="?attr/colorPrimary"
        android:minHeight="50dp"
        app:navigationIcon="@drawable/ic_launcher"
        app:title="@string/app_name"
        app:titleMarginStart="10dp"
        app:titleTextAppearance="@style/TitleTextStyle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <RelativeLayout
        android:layout_below="@id/id_toolbar"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/llyt"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.21"
                android:hint="随手写写…"
                android:padding="5dp"
                android:gravity="start"
                android:background="@drawable/selector_bg_et"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/llyt"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    style="@style/MyButton"
                    android:text="清 空"/>

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    style="@style/MyButton"
                    android:text="保 存"/>
            </LinearLayout>

        </LinearLayout>

        <!--<HorizontalScrollView-->
        <!--android:layout_below="@id/llyt"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="fill_parent">-->

        <!--<LinearLayout-->
        <!--android:id="@+id/llyt_recent"-->
        <!--android:orientation="horizontal"-->
        <!--android:padding="10dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <!--<com.opticalix.ui.RecentTextView-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="match_parent"/>-->
        <!--</LinearLayout>-->
        <!--</HorizontalScrollView>-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/llyt"
            android:numColumns="2"
            android:descendantFocusability="blocksDescendants"
            android:layout_marginBottom="5dp"
            >

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</RelativeLayout>